<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Username"
            android:ems="10"
            android:id="@+id/login_username" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="219dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/login_password" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="248dp"/>
    <Button
            android:text="Register"
            android:layout_width="134dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:id="@+id/register_button" android:layout_centerHorizontal="true" android:layout_marginBottom="189dp"/>
    <Button
            android:text="Sign In"
            android:layout_width="135dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="132dp" android:layout_centerHorizontal="true"
            android:id="@+id/switch_mode_tologin"/>
</RelativeLayout>